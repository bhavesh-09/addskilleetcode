<form class="meal-form">
    <h2>Add a meal</h2>
    <div class="field-group">
        <label for="title">Title</label>
        <input id="title" type="text" placeholder="What did you eat?" autocomplete="off">
    </div>
    <div class="field-group">
        <label for="calories">Calories</label>
        <input id="calories" type="number" placeholder="#" autocomplete="off">
    </div>
    <button class="add-meal" type="submit">Add meal</button>
</form>

<div class="meals">
    <h3>Meals</h3>
    <ul class="meal-list"></ul>
</div>